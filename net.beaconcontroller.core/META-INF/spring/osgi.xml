<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi-2.0-m1.xsd">

  <osgi:service id="IBeaconProvider" ref="controller"
    interface="net.beaconcontroller.core.IBeaconProvider">
  </osgi:service>

  <osgi:service id="FrameworkListener" ref="frameworkListener"
    interface="org.springframework.osgi.context.event.OsgiBundleApplicationContextListener">
  </osgi:service>
</beans>
